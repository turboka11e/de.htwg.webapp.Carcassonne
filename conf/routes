# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /newGame                    controllers.HomeController.newGame()
GET     /addPlayers                 controllers.HomeController.createGrid(size: Int)
GET     /addPlayer                  controllers.HomeController.addPlayer(player: String)
GET     /startGame                  controllers.HomeController.startGame()
GET     /gameBoard                  controllers.HomeController.gameBoard()
GET     /placeCard                  controllers.HomeController.placeCard(row: Int, col: Int, x: Int, y: Int)
GET     /rotate                     controllers.HomeController.rotate(dir: String)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
