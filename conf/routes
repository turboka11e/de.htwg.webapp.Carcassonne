# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index()
GET     /newGame                    controllers.HomeController.newGame(size: Int, p1: String, p2: String, p3: String, p4:String)
GET     /gameBoard                  controllers.HomeController.gameBoard()
GET     /rules                      controllers.HomeController.rules()
# Ajax
+ nocsrf
POST    /rotate                     controllers.HomeController.rotate()
+ nocsrf
POST    /placeCard                  controllers.HomeController.placeCard()
+ nocsrf
POST    /selectArea                 controllers.HomeController.selectArea()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
